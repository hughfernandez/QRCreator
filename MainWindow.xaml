<Window x:Class="QRCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox x:Name="txtToEncode" Text="Ingrese el texto a convertir a codigo QR" Width="500" FontSize="20" GotFocus="txtToEncode_GotFocus"  />
        <Button Content="Generar" Margin="20" Click="Button_Click" />
        <Image x:Name="imageQR" Width="300" Height="300"/>
    </StackPanel>
</Window>
